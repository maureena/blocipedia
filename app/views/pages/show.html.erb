<div class="row">
  <div class="col-md-8">
    <div class="page-header"> 
      <h1><%= markdown @page.title %><small> <%= link_to "Edit", edit_page_path(@page) %></small></h1>
    </div>
    <p><%= markdown @page.body %></p>
    <div><%= link_to "Add new Reference", new_page_reference_path(@page, @reference) %></div>
    <div>
      <h4>References</h4>
      <%= render partial: "references/reference", collection: @page.references %>
    </div>
  </div>
  <div class="col-md-4">
      <%= render partial: 'invites/form', locals: { page: @page, invite: @invite } %>
  </div>

</div>